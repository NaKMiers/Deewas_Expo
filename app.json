{
  "expo": {
    "name": "Deewas",
    "slug": "deewas",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "deewas",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "extra": {
      "webServerUrl": "http://localhost:3000",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "5eac6b3a-3cbc-43ef-9df7-aea34ac8dfbb"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anphagroup.deewas",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "Allows use of microphone for voice text input",
        "NSSpeechRecognitionUsageDescription": "Allows the app to recognize speech for text input."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anphagroup.deewas",
      "permissions": ["android.permission.RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.173590721564-ihd7ql2dffkd1apdle5g646rkq03b33i"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "iosAppId": "ca-app-pub-8539911634059441~9440395805",
          "androidAppId": "ca-app-pub-8539911634059441~4779337310"
        }
      ],
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow Deewas to access the microphone",
          "speechRecognitionPermission": "Allow Deewas to securely recognize user speech"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
